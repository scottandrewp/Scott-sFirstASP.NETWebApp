@{
    ViewBag.Title = "IS 413 Grade Calculator"; // set the title to what I want it to be for this page
}

<!--Import model to use it here-->
@model Scott_sFirstASP.NETWebApp.Models.GradeCalculatorModel;

<form method="post">


    <!--This is the form where the program gets input from the user for each assignment group-->
    <label>Assignments (Enter your score for the Assignment category from 0 to 100):</label>
    <input id="assignments" asp-for="Assignments" />
    <br />
    <label>Group Project (Enter your score for the Group Project category from 0 to 100):</label>
    <input id="group" asp-for="GroupProject" />
    <br />
    <label>Quizzes (Enter your score for the Quiz category from 0 to 100):</label>
    <input id="quiz" asp-for="Quizzes" />
    <br />
    <label>Exams (Enter your score for the Exam category from 0 to 100):</label>
    <input id="exam" asp-for="Exams" />
    <br />
    <label>INTEX (Enter your score for the INTEX category from 0 to 100):</label>
    <input id="INTEX" asp-for="INTEX" />
    <br />
    <input type="submit" value="Calculate Grade" id="submitButton" />
    <div asp-validation-summary="All"></div> <!--Print the validation warnings.-->
</form>
